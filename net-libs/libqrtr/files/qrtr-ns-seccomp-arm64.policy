lseek: 1
faccessat: 1
faccessat2: 1
bind: 1
brk: 1
close: 1
connect: 1
exit_group: 1
fstat: 1
newfstatat: 1
getpid: 1
getsockname: 1
gettimeofday: 1
# prevent both PROT_WRITE and PROT_EXEC
mmap: arg2 in 0xfffffffb || arg2 in 0xfffffffd
mprotect: arg2 in 0xfffffffb || arg2 in 0xfffffffd
munmap: 1
openat: 1
pipe2: 1
ppoll: 1
read: 1
restart_syscall: 1
recvfrom: 1
rt_sigaction: 1
sendto: 1
# Only AF_UNIX (for syslog), AF_NETLINK and AF_QIPCRTR sockets
socket: arg0 == AF_UNIX || arg0 == AF_NETLINK || arg0 == 42
uname: 1
wait4: 1
write: 1
