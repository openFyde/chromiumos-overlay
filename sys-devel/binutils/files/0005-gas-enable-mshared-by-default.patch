--- a/gas/testsuite/gas/i386/x86-64-relax-3.d
+++ b/gas/testsuite/gas/i386/x86-64-relax-3.d
@@ -1,4 +1,5 @@
 #source: relax-3.s
+#as: -mno-shared
 #objdump: -dwr
 #notarget: *-*-solaris*
 
