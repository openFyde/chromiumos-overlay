EAPI=6
CROS_WORKON_COMMIT="269ba720342563c97123ace40e03cce75765e75f"
CROS_WORKON_TREE=("a3d79a5641e6cda7da95a9316f5d29998cc84865" "2920f1f6e0b4bd988fc1e7cb9320d5d0d9bbfddd" "cfb418a6d821e9123bf6f220350e78f6f287c506" "e7dba8c91c1f3257c34d4a7ffff0ea2537aeb6bb")
