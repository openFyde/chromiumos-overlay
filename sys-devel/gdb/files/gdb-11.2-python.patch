index ca457e597b1..c890bf58624 100644
--- a/gdb/python/python.c
+++ b/gdb/python/python.c
@@ -32,6 +32,13 @@
 #include "python.h"
 #include "extension-priv.h"
 #include "cli/cli-utils.h"
