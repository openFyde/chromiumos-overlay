# udev rules to start firmware update for NVME SSD: Samsung
SUBSYSTEM=="nvme", \
ATTRS{vendor}=="0x144d", \
ATTR{firmware_rev}!="26300039", \
ATTR{model}=="PM991a NVMe*", \
ACTION=="add", \
RUN+="/sbin/initctl emit fwupdtool-update PLUGIN=nvme GUID=f49677c5-4921-4733-81fa-69a09abbcc4d"
