EAPI="7"

CROS_WORKON_COMMIT="e0fd4b8ba338726bc7bc809358572e5cc695ed96"
CROS_WORKON_TREE="db93398111933f543ab5a1a24efa88f0fe236ba6"
CROS_WORKON_LOCALNAME="adhd"
CROS_WORKON_PROJECT="chromiumos/third_party/adhd"
