CROS_WORKON_COMMIT=("b29770a0ce4545f772fc9c010c66fa9ebb825789" "b4b69a963de3f177ca4ac49bf0d80f64c42d198d")
CROS_WORKON_TREE=("818fb39cc4f7e0d9c8b6d16dcea9994eedb7928c" "cc8ae75ea68e5c37c867b396c0540c8a109ed460" "e7dba8c91c1f3257c34d4a7ffff0ea2537aeb6bb")
CROS_GO_PACKAGES=(
	"chromiumos/perfetto/trace_processor/..."
)

inherit cros-constants

CROS_WORKON_LOCALNAME=("aosp/external/perfetto" "platform2")
CROS_WORKON_PROJECT=("platform/external/perfetto" "chromiumos/platform2")
CROS_WORKON_REPO=("${CROS_GIT_AOSP_URL}" "${CROS_GIT_HOST_URL}")
